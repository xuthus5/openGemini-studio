{
  "root": true,
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:vue/vue3-recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "parser": "@typescript-eslint/parser"
  },
  "rules": {
    "vue/multi-word-component-names": "off",
    "vue/no-v-html": "off"
  },
  "ignorePatterns": ["dist", "node_modules"]
}
